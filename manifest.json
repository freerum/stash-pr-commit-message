{
    "name": "Stash PR-ettier Merge Message",
    "description": "Changes Stash's Pull-Request Merge message to the PR's title. Results in prettier repository commit messages",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["declarativeContent", "activeTab"],
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "include_globs": ["https://stash.*/*/pull-requests/*"],
            "run_at": "document_idle",
            "js": ["contentScript.js"]
        }
    ],
    "icons": {
        "16": "icon_16x16.png",
        "32": "icon_32x32.png",
        "48": "icon_48x48.png",
        "128": "icon_128x128.png"
    }
}
